{
  "parser": "@typescript-eslint/parser",
  "env": {
    "node": true,
    "commonjs": true,
    "browser": true,
    "es6": true
   },
  "plugins": [
    "@typescript-eslint",
  ],
  "extends": [
    "next",
    "next/core-web-vitals",
    "eslint:recommended",
    "plugin:@typescript-eslint/eslint-recommended",
    "plugin:@typescript-eslint/recommended",
  ],
  "rules": {
    "@typescript-eslint/explicit-module-boundary-types": 0, // Not forced to make types for everything
    "@typescript-eslint/no-explicit-any": 0, // Not forced to make types for everything
    "@typescript-eslint/no-non-null-assertion": 0, // allow asserting for clearier code
  }
}
